{
  "name": "llm-art-server",
  "module": "app.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "tailwindcss": "^4.1.11",
    "tailwindcss-cli": "^0.1.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.25.74"
  },
  "scripts": {
    "build:css": "bunx tailwindcss-cli -i ./src/index.css -o ./public/index.css --minify",
    "dev:css": "bunx tailwindcss-cli -i ./src/index.css -o ./public/index.css --watch",
    "build:js": "bun build public/index.tsx --outdir=public --splitting",
    "build": "bun run build:css && bun run build:js",
    "dev": "bun run dev:css & bun --hot run app.ts"
  }
}
